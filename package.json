{
  "name": "graphduck",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/narze/graphduck",
  "author": "Manassarn Manoonchai <manassarn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --watch *.ts,*.graphql --respawn --transpile-only src/index.ts",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "test": "jest",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "type-check": "tsc --pretty --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "apollo-server-testing": "^2.17.0",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "apollo-server": "^2.17.0",
    "class-validator": "^0.12.2",
    "graphql": "^15.3.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.26"
  }
}
